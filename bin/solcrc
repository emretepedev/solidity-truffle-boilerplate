#!/usr/bin/env bash

if [ -f ".solcrc" ]; then
  SOLIDITY_VERSION=$(cat .solcrc)

  solc-select install "$SOLIDITY_VERSION"
  solc-select use "$SOLIDITY_VERSION"
elif [ -f ".env" ]; then
  # shellcheck source=../.env
  source ".env"

  solc-select install "$TRUFFLE_SOLIDITY_VERSION"
  solc-select use "$TRUFFLE_SOLIDITY_VERSION"
else
  echo "Cannot find .solcrc or .env file. Fix and re-run the 'solcrc'."
  exit 0
fi
